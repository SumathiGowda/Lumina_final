<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Edit Profile Picture" />
    <title>Edit Profile - Lumina</title>
    <link
        href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&family=Roboto:wght@700&display=swap"
        rel="stylesheet" />
    <style>
        /* Styles (as provided in your original code) */
        body {
            font-family: "Nunito", sans-serif;
            background: #999251;
            color: white;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            height: 100vh;
        }

        .down {
            margin-top: 200px;
            width: 800px;
        }

        header {
            position: fixed;
            top: 0;
            width: 100%;
            background-color: rgba(0, 0, 0, 0.8);
            color: #fff;
            padding: 20px;
            z-index: 1000;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        header .buttons {
            display: flex;
            gap: 10px;
        }

        .lumina-button,
        .button.members,
        .home {
            background: linear-gradient(45deg, #6a666e, #999251);
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            cursor: pointer;
            border-radius: 5px;
            font-size: 1rem;
        }

        .lumina-button:hover,
        .button.members:hover,
        .home:hover {
            background: linear-gradient(45deg, #999251, #6a666e);
        }

        .container {
            background-color: rgba(0, 0, 0, 0.8);
            padding: 50px 20px 60px;
            border-radius: 8px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 800px;
            text-align: center;
            margin-top: 100px;
        }

        h2 {
            margin-bottom: 20px;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            color: #d8ac5b;
            font-size: 36px;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        .form-group label {
            display: block;
            font-size: 14px;
            color: #ffffff;
            margin-bottom: 5px;
        }

        .form-group input,
        .form-group textarea,
        .form-group select,
        .form-group input[type="date"] {
            width: 90%;
            padding: 10px;
            border: 1px solid #cea432;
            border-radius: 4px;
            background-color: rgba(255, 255, 255, 0.1);
            color: #d8a428;
        }

        .form-group input::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

        .submit-button,
        .change-password-button,
        .discard {
            width: 100%;
            padding: 12px;
            cursor: pointer;
            border-radius: 4px;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            font-size: 16px;
            font-weight: bold;
            margin-top: 15px;
        }

        .submit-button {
            background: linear-gradient(45deg, #6a666e, #999251);
            color: rgb(10, 10, 10);
            border: none;
        }

        .discard {
            background: linear-gradient(45deg, #6a666e, #999251);
            color: rgb(10, 10, 10);
            border: none;
        }

        .discard-button:hover {
            background: linear-gradient(45deg, #999251, #6a666e);
            color: #ffffff;
        }

        .submit-button:hover {
            background: linear-gradient(45deg, #999251, #6a666e);
            color: #ffffff;
        }

        .change-password-button {
            background-color: rgba(46, 45, 45, 0.8);
            color: white;
            border: none;
        }

        .change-password-button:hover {
            background-color: rgba(46, 45, 45, 1);
        }

        .form-footer {
            margin-top: 20px;
            color: white;
        }

        .form-footer a {
            color: #c7a034;
            text-decoration: none;
        }

        .form-footer a:hover {
            text-decoration: underline;
        }

        .profile-pic-container {
            margin-bottom: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .profile-pic-container img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #d3c7a6;
        }

        .file-input-container {
            margin-bottom: 20px;
        }

        input[type="file"] {
            display: none;
        }

        .upload-button {
            background: linear-gradient(45deg, #6a666e, #999251);
            color: white;
            padding: 0.5rem 1rem;
            cursor: pointer;
            border-radius: 5px;
            font-size: 1rem;
            text-decoration: none;
        }

        .upload-button:hover {
            background: linear-gradient(45deg, #999251, #6a666e);
        }
    </style>
</head>

<body>
    <header class="header">
        <a href="AboutLumina.html">
            <button class="lumina-button">About Lumina</button>
        </a>
        <div class="buttons">
            <button class="button members">Members</button>
            <a href="SignIn.html">
                <button class="home">Home</button>
            </a>
        </div>
    </header>

    <div class="down">
        <div class="container">
            <h2>Edit Your Profile</h2>

            <input type="hidden" name="username" id="hiddenUsername">

            <!-- Profile Picture Preview -->
            <div class="profile-pic-container">
                <img id="profilePicPreview" src="defaultProfile.jpg" alt="Profile Picture" />
            </div>

            <!-- File Upload Section -->
            <div class="file-input-container">
                <input type="file" id="fileInput" accept="image/*" name="profileImage" />
                <label for="fileInput" class="upload-button">Choose New Picture</label>
            </div>

            <!-- Remove Profile Picture Button -->
            <div>
                <button class="upload-button" onclick="removeProfilePicture()">Remove Profile Picture</button>
            </div>

            <!-- Full Name -->
            <div class="form-group">
                <input type="text" id="fullName" placeholder="Full Name" />
            </div>

            <!-- Bio -->
            <div class="form-group">
                <textarea id="bio" placeholder="Bio"></textarea>
            </div>

            <!-- Gender Selection -->
            <div class="form-group">
                <select id="gender">
                    <option value="" disabled selected>Gender</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="other">Other</option>
                </select>
            </div>

            <!-- Date of Birth -->
            <div class="form-group">
                <input type="date" id="dob" />
            </div>

            <!-- Submit Button -->
            <div>
                <button class="submit-button" onclick="updateProfile()">Save Changes</button>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            function getParameterByName(name, url = window.location.href) {
                name = name.replace(/[\[\]]/g, '\\$&');
                var regex = new RegExp('[?&]' + name + '(=([^&#]*)|&|#|$)'),
                    results = regex.exec(url);
                if (!results) return null;
                if (!results[2]) return '';
                return decodeURIComponent(results[2].replace(/\+/g, ' '));
            }

            const username = getParameterByName('username');
            document.getElementById('hiddenUsername').value = username;
            console.log("Username from URL:", username);

            // Fetch user data and pre-fill the form
            fetchUserProfile(username);
        });

        async function fetchUserProfile(username) {
            // Replace '/api/profile?username=' with your actual API endpoint
            fetch(`/api/profile?username=${username}`)
                .then(response => response.json())
                .then(user => {
                    document.getElementById('fullName').value = user.name || '';
                    document.getElementById('bio').value = user.bio || '';
                    document.getElementById('gender').value = user.gender || '';
                    document.getElementById('dob').value = user.dob || '';

                    // Update profile picture preview
                    const profilePicPreview = document.getElementById('profilePicPreview');
                    if (user.profile_img) {
                        profilePicPreview.src = user.profile_img; // Assuming the API returns the full path
                    } else {
                        profilePicPreview.src = 'defaultProfile.jpg'; // Use a default image if no profile image exists
                    }
                })
                .catch(error => {
                    console.error('Error fetching profile:', error);
                    alert('Failed to load profile data.');
                });
        }

        function removeProfilePicture() {
            document.getElementById('profilePicPreview').src = 'defaultProfile.jpg';
            // Optionally, update the backend to handle profile picture removal
        }

        async function updateProfile() {
            const username = document.getElementById('hiddenUsername').value;
            const fullName = document.getElementById('fullName').value;
            const bio = document.getElementById('bio').value;
            const gender = document.getElementById('gender').value;
            const dob = document.getElementById('dob').value;
            const profileImageInput = document.getElementById('fileInput');

            const formData = new FormData();
            formData.append('username', username);
            formData.append('fullName', fullName);
            formData.append('bio', bio);
            formData.append('gender', gender);
            formData.append('dob', dob);

            if (profileImageInput.files && profileImageInput.files[0]) {
                formData.append('profileImage', profileImageInput.files[0]);
            }

            // Log FormData contents (for debugging)
            for (var pair of formData.entries()) {
                console.log(pair[0] + ', ' + pair[1]);
            }

            fetch('/updateProfile', {
                method: 'POST',
                body: formData,
            })
                .then(response => {
                    console.log("Raw response from API:", response);
                    if (!response.ok) {
                        throw new Error(`HTTP error! Status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    console.log("Response data from API:", data);
                    alert(data.message); // Display success message
                    // Refresh the profile picture
                    fetchUserProfile(username);
                })
                .catch((error) => {
                    console.error('Error:', error);
                    alert('Failed to update profile.');
                });
        }
    </script>
</body>

</html>
