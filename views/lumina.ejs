    <!-- Features Section -->
    <section class="features">
      <h2>A Space for Literary Expression</h2>
      <div class="feature-items">
        <div class="feature-item">
          <img src="1 (2).png" alt="Share Your Stories" class="feature-image" />
          <h3>Share Your Stories</h3>
          <p>Create your personal page and showcase your literary works.</p>
        </div>
        <div class="feature-item">
          <img src="2 (2).png" alt="Join the Community" class="feature-image" />
          <h3>Join the Community</h3>
          <p>Connect with fellow writers and readers who share your passion.</p>
        </div>
        <div class="feature-item">
          <img src="3 (2).png" alt="Get Discovered" class="feature-image" />
          <h3>Get Discovered</h3>
          <p>Let your work shine and reach an appreciative audience.</p>
        </div>
      </div>
    </section>

    <!-- Footer Section -->
    <footer class="footer">
      <div class="contact-info">
        <h2>Contact Us</h2>
        <p>
          Email: <a href="lumina.jssateb@gmail.com">lumina.jssateb@gmail.com</a>
        </p>
        <p>
          Instagram:
          <a
            href="https://www.instagram.com/lumina_jssateb?igsh=MTQ5ejJqajc2bG8yMg%3D%3D&utm_source=qr"
            >lumina_jssateb</a
          >
        </p>
        <p>Phone: +91 7892193506</p>
      </div>
      <p>Enroll Now.</p>
    </footer>
