<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Join Lumina, a community for writers and readers to share, discover, and explore literary works."
    />
    <title>Where Words Come to Life</title>
    <link rel="stylesheet" href="lumina.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Poppins:wght@300;400;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- Header Section -->
    <header class="header">
      <a href="/AboutLumina">
        <button class="lumina-button">About Lumina</button>
      </a>
      <div class="buttons">
        <button class="button members">Members</button>
        <a href="/SignUp">
          <button class="button join">Sign Up</button>
        </a>
        <a href="/SignIn">
          <button class="button sign-in">Sign In</button>
        </a>
      </div>
    </header>

    <!-- Main Content -->
    <div class="background">
      <div class="container">
        <div class="content-box">
          <h1>LUMINA</h1>
          <h2>Where Words Meet Reality</h2>
          <p>Welcome to the world where brilliance meets expression.</p>
          <br />
        </div>
        <div class="buttons">
          <br />
          <button class="explore" onclick="window.location.href='/home';">Explore Works</button>
          <a href="https://forms.gle/1QceV2449eMTpTGH6" target="_blank">
            <button class="member">Become a Member</button>
          </a>
        </div>
      </div>
    </div>

    <!-- New Section -->
    <section class="container">
      <div class="slider-wrapper">
        <div class="slider">
          <img id="slide-1" src="Motivational Desktop Wallpaper.jpg" />
          <img id="slide-2" src="2.jpg" />
          <img id="slide-3" src="Motivational Desktop Wallpaper (1).jpg" />
          <img id="slide-4" src="four(1).jpg" />
          <img id="slide-5" src="5.jpg" />
          <img id="slide-6" src="6.jpg" />
